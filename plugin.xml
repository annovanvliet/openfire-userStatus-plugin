<?xml version="1.0" encoding="UTF-8"?>
<plugin>

    <!-- Main plugin class -->
    <class>com.reucon.openfire.plugins.userstatus.UserStatusPlugin</class>
    
    <!-- Plugin meta-data -->
    <name>User Status Plugin</name>
    <description>Openfire plugin to save the user status to the database.</description>
    <author>Stefan Reuter</author>
    <version>${project.version}</version>
    <date>06/01/2019</date>
    <minServerVersion>4.4.0</minServerVersion>
    <minJavaVersion>1.8</minJavaVersion>
    <databaseKey>user-status</databaseKey>
    <databaseVersion>2</databaseVersion>
    <licenseType>gpl</licenseType>
    
    <!-- Admin console meta-data -->
    <adminconsole>              
        <tab id="tab-server">
            <sidebar id="sidebar-server-settings">
               <item id="user-status-settings" name="${user-status.settings.title}"
                   url="user-status-settings.jsp"
                   description="${user-status.settings.description}" />
            </sidebar>
        </tab>
        <tab id="tab-session">
            <sidebar id="sidebar-session-history" name="${user-status.sidebar-session-history.title}">
               <item id="server-session-history" name="${user-status.server-session-history.title}"
                   url="server-session-history.jsp"
                   description="${user-status.server-session-history.description}" />
               <!-- <item id="user-session-history" name="${user-status.user-session-history.title}"
                   url="user-session-history.jsp"
                   description="${user-status.user-session-history.description}" /> -->
            </sidebar>
        </tab>
    </adminconsole>
</plugin>
